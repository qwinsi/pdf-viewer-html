{
  "name": "PDF Viewer",
  "short_name": "pdf-viewer",
  "theme_color": "#3d404d",
  "background_color": "#eeeeee",
  "display_override": ["tabbed","window-controls-overlay"],
  "display": "standalone",
  "start_url": "index.html",
  "description": "HTML5 webpage for viewing PDF files",
  "orientation": "any",
  "file_handlers": [
    {
      "action": "/index.html",
      "accept": {
        "application/pdf": [".pdf"]
      },
      "launch_type": "single-client"
    }
  ],
  "icons": [
      {
          "src": "favicon.png",
          "sizes": "512x512"
      }
  ]
}